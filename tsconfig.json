{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "skipLibCheck": true,
        "lib": [
            "es7",
            "es2017.object",
            "dom"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "src/types/*"
        ]
    },
    "filesGlob": [
        "/src/**/*.ts",
        "/test/**/*.ts",
        "/client/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}